<html>
<h3>Player's Game Libraries</h3>

<form id='search_player' action='' method=''>
    <label> Search Games Owned By Player:</label>
    <input id='playersGamertag' type='text' name='playersGamertag' value=''>
    <input type="button" value="Search" onclick="searchPlayerGame()">
</form>

<table>
    <thead>
    <th>Player Gamertag</th>
    <th>Title</th>
    </thead>
    <tbody>
    {{#each playersAndGames}}
        <tr>
            <td>{{playerID}}</td>
            <td>{{gameID}}</td>
            <td><button onclick="deletePlayersGames({{playerID}},{{gameID}})">Delete</button></td>
        </tr>
    {{/each}}
    </tbody>
</table>

<form id="addPlayersGame" action="/playersGames" method="post">
    Gamertag: <select name="gamerTag">
    {{#each gamerTags}}
        <option value="{{playerID}}">{{gamerTag}}</option>
    {{/each}}
    </select><br>
    Title: <select name="titles">
    {{#each titles}}
        <option value="{{gameID}}">{{title}}</option>
    {{/each}}
    </select><br>
    <input type="submit" value="Submit">
</form>

</html>
