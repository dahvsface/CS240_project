<html>
<h3>Player Game Libraries</h3>
<table>
    <thead>
    <th>Player ID</th>
    <th>Game ID</th>
    </thead>
    <tbody>
    {{#each playersAndGames}}
        <tr>
            <td>{{playerID}}</td>
            <td>{{gameID}}</td>
            <td><button onclick="deleteEntry({{playerID}})">Delete</button></td>
            <td><a href="/playersGames/{{playerID}}">Update</a></td>
        </tr>
    {{/each}}
    </tbody>
</table>

<form id="addPlayersGame" action="/playersGames" method="post">
    Gamertag: <select name="gamerTag">
    {{#each gamerTags}}
        <option value="{{playerID}}">{{gamerTag}}</option>
    {{/each}}
    </select><br>
    
    Title: <select name= "titles">
    {{#each titles}}
        <option value="{{gameID}}">{{title}}</option>
    {{/each}}
    </select><br>
    <input type="submit" value="Submit">
</form>

</html>
